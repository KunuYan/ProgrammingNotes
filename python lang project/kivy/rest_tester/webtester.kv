#:kivy 2.0.0

<BaseWindow>:
    url: target_url_text_field
    response_body: response_body_text_field

    GridLayout:

        cols: 2
        rows: 3
        width: root.width
        height: root.height

        Label:
            text: "URL:"
            background_color: 0.1, 0.5, 0.6, 1

        TextInput:
            id: target_url_text_field
            size: 400, 30
            text: "https://www.google.com"
            multiline: False

        Label:
            text: "Method:"
            color: 1, 1, 1, 1
            canvas.before:
                Color:
                    rgba: 0, 0 , 0, 1

        GridLayout:
            cols: 3
            rows: 2

            Button:
                text: 'GET'
                background_color: 0.1, 0.5, 0.6, 1
                on_release: root.method = root.perform_http_request("GET")

            Button:
                text: 'PUT'
                background_color: 0.1, 0.5, 0.6, 1
                on_release: root.method = root.perform_http_request("PUT")

            Button:
                text: 'POST'
                background_color: 0.1, 0.5, 0.6, 1
                on_release: root.method = root.perform_http_request("POST")

            Button:
                text: 'PATCH'
                background_color: 0.1, 0.5, 0.6, 1
                on_release: root.method = root.perform_http_request("PATCH")

            Button:
                text: 'DELETE'
                background_color: 0.1, 0.5, 0.6, 1
                on_release: root.method = root.perform_http_request("DELETE")
        Label:
            text: "Response Body:"
            color: 1, 1, 1, 1
            canvas.before:
                Color:
                    rgba: 0, 0 , 0, 1
        TextInput:
            id: response_body_text_field
            size: 400, 30
            multiline: True
            

       
   